<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_skill"
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_namaKelasRunning"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Kelas"
                        android:fontFamily="@font/poppins_bold"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="@color/dark" />

                    <TextView
                        android:id="@+id/tv_jamKelasRunning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mulai - selesai"
                        android:fontFamily="@font/poppins_bold"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/hariKelasSchedule"
                        style="@style/CardView"
                        app:cardBackgroundColor="#8DB0FF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp">
                        <TextView
                            android:id="@+id/tv_hariKelas"
                            android:padding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Hari"
                            android:fontFamily="@font/poppins_bold"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/dark" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/tanggalKelasRunning"
                        style="@style/CardView"
                        app:cardBackgroundColor="#58FF60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        app:cardCornerRadius="8dp">
                        <TextView
                            android:id="@+id/tv_tanggalKelasRunning"
                            android:padding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Kelas"
                            android:fontFamily="@font/poppins_bold"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/dark" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/statusClassRunning"
                        style="@style/CardView"
                        app:cardBackgroundColor="#FFE500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        app:cardCornerRadius="8dp">
                        <TextView
                            android:id="@+id/tv_statusClassRunning"
                            android:padding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:fontFamily="@font/poppins_bold"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/dark" />
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/dark" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnPresensi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/orange"
                        android:text="Tampil Member"
                        android:fontFamily="@font/poppins_bold"/>
                </LinearLayout>


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>